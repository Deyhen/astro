{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "types": [
      "astro/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "public/*": [
        "src/public/*"
      ]
    }
  }
}
